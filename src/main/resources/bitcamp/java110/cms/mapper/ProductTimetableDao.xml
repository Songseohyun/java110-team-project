<?xml version="1.0" encoding="UTF-8"?>

<!-- ProductTimetableDao 클래스가 사용할 SQL이 들어 있는 파일 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.java110.cms.dao.ProductTimetableDao">

	<resultMap type="productTimetable" id="productTimetableMap">
		<id column="ctno" property="no" />
		<result column="cno" property="cno" />
		<result column="date" property="date" />
		<result column="stime" property="stime" />
		<result column="capa" property="capa" />


	</resultMap>

	<sql id="select1">
		select
		ctno,
		cno,
		date,
		stime,
		capa
		from
		p_cls_ttab
		

	</sql>

	<select id="findAll" resultMap="productTimetableMap" parameterType="map">
		<include refid="select1"></include>

		

		order by
		ctno asc
	</select>

	<select id="findByCtno" resultMap="productTimetableMap"	parameterType="int">
		<include refid="select1"></include>
		where
		ctno=#{value}
	</select>

	<select id="findByCno" resultMap="productTimetableMap"	parameterType="int">
		<include refid="select1"></include>
		where
		cno=#{value}
	</select>



</mapper>
