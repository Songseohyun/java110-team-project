<?xml version="1.0" encoding="UTF-8"?>
<!-- MemberDao 클래스가 사용할 SQL이 들어 있는 파일 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.java110.cms.dao.ClassDao">

    <resultMap type="class" id="classMap">
        <id column="titl" property="titl"/>
        <id column="pric" property="pric"/>
        <id column="cno" property="cno"/>
        <id column="cno" property="cno"/>
        <id column="cno" property="cno"/>
        <id column="cno" property="cno"/>
    </resultMap>
    
    <sql id="select1">
        select 
            m.mno,
            m.name,
            m.email,
            m.tel,
            mr.posi,
            mp.photo
        from 
            p1_mgr mr
            inner join p1_memb m on mr.mrno = m.mno
            left outer join p1_memb_phot mp on mr.mrno = mp.mno
    </sql>

    <select id="findAll" resultMap="classMap" parameterType="map">
        select 
			titl,pric,bas_addr,mtno
		from
			p_cls ps inner join p_mete pe on ps.mono = pe.mono
			
		where	
    </select>

    
    <insert id="classinsert" parameterType="Classes">
        insert into p1_mgr(mrno,posi) 
        values(#{no},#{position})
    </insert> 
    
</mapper>









