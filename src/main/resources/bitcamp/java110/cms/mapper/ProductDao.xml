    <select id="hotItemlist" resultMap="productMap">
    	SELECT PD.ptno, PD.titl
 		  FROM (SELECT ptno, COUNT(*) as cnt
  		  FROM p_prdt_order P
      GROUP BY ptno) CNT, p_prdt PD
         WHERE PD.ptno=CNT.ptno
      ORDER BY cnt DESC
    </select>



    
<sql id="selectAll">
select
    p.ptno,
    p.titl,
    p.conts,
    p.pric,
    p.deli,
    p.star,
    p.rgdt,
    p.stock,
    p.phot as pp,
    p.meno,
    p.ctno,
    p.stno,
    p.star,
    mete.meno,
    mete.nick,
    mete.name,
    mete.phot mp,
    cert.ctno,
    cert.type,
    stag.stno,
    stag.stname,
    stag.mtno,
    mtag.mtname,
    btag.btno,
    btag.btname
from 
    p_prdt p
    join p_mete mete
    join p_cert cert
    join p_stag stag
    JOIN p_mtag mtag
    JOIN p_btag btag
ON
    p.meno=mete.meno AND
    p.ctno=cert.ctno AND
    p.stno=stag.stno AND
    stag.mtno = mtag.mtno AND
    mtag.btno = btag.btno
</sql>
    <select id="findAllByMtno" resultMap="productMap" parameterType="map">
    <include refid="selectAll" />
    where
        stag.mtno=#{mtno}
    order by 
        ptno DESC
    </select>
    
  
    
    <select id="findAllByStno" resultMap="productMap" parameterType="map">
    <include refid="selectAll" />
    where
        stag.stno=#{stno}
    order by 
        ptno DESC
    </select>
    
    <select id="findAll_list" resultMap="productMap">
    <include refid="selectAll" />
    where
        p.stat='Y'
    order by 
        ptno DESC
    </select>
    
    <select id="findAllByList" resultMap="productMap">
    select
        prdt.ptno,
        stag.stname,
        prdt.titl, 
        mete.nick,
        mete.name,
        prdt.pric,
        prdt.stock,
        prdt.rgdt
    from
        p_prdt as prdt 
        inner join p_stag as stag
        inner join p_mete as mete

    on  prdt.stno = stag.stno and
        prdt.meno = mete.meno
     
    order by
        prdt.ptno asc
    </select>

    <select id="findByNo" 
            resultMap="productMap" parameterType="int">
select
    p.ptno,
    p.titl,
    p.conts,
    p.pric,
    p.deli,
    p.star,
    p.rgdt,
    p.stock,
    p.phot pp,
    p.meno,
    p.ctno,
    p.stno,
    mete.meno,
    mete.nick,
    mete.name,
    mete.phot mp,
    cert.ctno,
    cert.type,
    stag.stno,
    stag.stname,
    stag.mtno,
    mtag.mtno,
    mtag.mtname,
    btag.btno,
    btag.btname,
    pcls.titl clstitl,
    pcls.cfile,
    clsmete.phot clsmetephot,
    clsmete.nick clsmetenick,
    pcls.star clsstar,
    pcls.bas_addr clsaddr,
    pcls.cno clscno
from 
    p_prdt p
    join p_mete mete
    join p_cert cert
    join p_stag stag
    JOIN p_mtag mtag
    join p_cls pcls
    join p_mete clsmete
    join p_btag btag
ON
    p.meno=mete.meno AND
    p.ctno=cert.ctno AND
    p.stno=stag.stno AND
    stag.mtno = mtag.mtno AND
    mtag.btno = btag.btno AND
    pcls.cno= cert.cno AND
    pcls.mono = clsmete.meno
where
    ptno=#{value} and
    p.stat='Y'
    </select>
    
    <select id="findAllByMeno" 
            resultMap="productMap" parameterType="Map">
        select
            ptno,
            titl,
            conts,
            pric,
            deli,
            star,
            rgdt,
            stock,
            phot,
            meno,
            ctno,
            stno
        from
            p_prdt
        where 
            meno=#{mentno}
    </select>
    
    
